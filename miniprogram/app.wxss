page {
  background: #f6f7fb;
  color: #0f172a;
  font-size: 16px;
}

.page {
  padding: 16px;
}

.card {
  background: #ffffff;
  border-radius: 14px;
  padding: 16px;
  box-shadow: 0 6px 18px rgba(15, 23, 42, 0.06);
}

.title {
  font-size: 20px;
  font-weight: 700;
  margin-bottom: 6px;
}

.sub {
  font-size: 13px;
  color: rgba(15, 23, 42, 0.65);
}

.section {
  margin-top: 12px;
}

.row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 12px;
}

.btn-primary {
  background: #0f766e;
  color: #ffffff;
  border-radius: 12px;
}

.btn-ghost {
  background: #ffffff;
  color: #0f766e;
  border: 1px solid rgba(15, 118, 110, 0.35);
  border-radius: 12px;
}

.label {
  font-size: 14px;
  color: rgba(15, 23, 42, 0.75);
  margin-bottom: 6px;
}

.input {
  border: 1px solid rgba(15, 23, 42, 0.12);
  border-radius: 12px;
  padding: 10px 12px;
  background: #ffffff;
}

.hint {
  font-size: 12px;
  color: rgba(15, 23, 42, 0.55);
  margin-top: 8px;
}

.hr {
  height: 1px;
  background: rgba(15, 23, 42, 0.08);
  margin: 12px 0;
}

