<view class="page">
  <view class="card">
    <view class="title">预订已提交</view>
    <view class="sub">我们将在 4 小时内联系确认</view>

    <view class="section">
      <view>订单号：{{orderId}}</view>
      <view>自提地点：{{pickupLocation}}</view>
      <view>取货日期：{{pickupDate}}</view>
      <view>预订内容：{{itemsText}}</view>
      <view>金额：RM {{total}}</view>
      <view>交易编号：{{paymentRef}}</view>
      <view class="hint" style="margin-top:8px;">售后 WhatsApp：{{afterSalesPhone}}</view>
    </view>

    <view class="hr"></view>

    <button class="btn-primary" bindtap="copyAfterSalesText">复制售后信息</button>
    <button class="btn-ghost" style="margin-top:10px;" bindtap="copyPhone">复制 WhatsApp 号码</button>
    <button class="btn-ghost" style="margin-top:10px;" bindtap="backHome">再来一单</button>
  </view>
</view>
